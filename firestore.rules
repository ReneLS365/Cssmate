rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null && request.auth.uid is string;
    }

    function memberDoc(teamId) {
      return get(/databases/$(database)/documents/teams/$(teamId)/members/$(request.auth.uid));
    }

    function hasMemberDoc(teamId) {
      return exists(/databases/$(database)/documents/teams/$(teamId)/members/$(request.auth.uid));
    }

    function isOwner(teamId) {
      return isSignedIn()
        && get(/databases/$(database)/documents/teams/$(teamId)).data.ownerUid == request.auth.uid;
    }

    function isMember(teamId) {
      return isSignedIn()
        && (
          isOwner(teamId)
          || (hasMemberDoc(teamId) && !(memberDoc(teamId).data.disabled == true))
        );
    }

    function isAdmin(teamId) {
      return isSignedIn()
        && (
          isOwner(teamId)
          || (hasMemberDoc(teamId) && (memberDoc(teamId).data.role == 'admin' || memberDoc(teamId).data.role == 'owner'))
        );
    }

    match /users/{uid} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == uid;
      allow update: if isSignedIn() && request.auth.uid == uid;
    }

    match /teams/{teamId} {
      allow read: if isMember(teamId);
      allow create: if isSignedIn()
        && !exists(/databases/$(database)/documents/teams/$(teamId));
      allow update, delete: if isAdmin(teamId);

      match /members/{uid} {
        allow read: if isMember(teamId);
        allow create: if isSignedIn() && (
          isAdmin(teamId)
          || (
            request.auth.uid == uid
            && (
              isOwner(teamId)
              || !exists(/databases/$(database)/documents/teams/$(teamId))
            )
          )
        );
        allow update: if isAdmin(teamId);
        allow delete: if isAdmin(teamId);
      }

      match /cases/{caseId} {
        allow read, list: if isMember(teamId);
        allow create: if isMember(teamId);
        allow update, delete: if isAdmin(teamId) || (isMember(teamId) && resource.data.createdByUid == request.auth.uid);
      }

      match /audit/{auditId} {
        allow read: if isMember(teamId);
        allow create: if isMember(teamId);
        allow update, delete: if false;
      }

      match /backups/{backupId} {
        allow read, write: if isAdmin(teamId);
      }

      match /{document=**} {
        allow read: if isMember(teamId);
        allow write: if isAdmin(teamId);
      }
    }

    match /teamInvites/{inviteId} {
      allow create: if isSignedIn()
        && request.resource.data.teamId is string
        && isAdmin(request.resource.data.teamId);

      allow read: if isSignedIn()
        && resource.data.teamId is string
        && isMember(resource.data.teamId);

      allow update, delete: if isSignedIn()
        && resource.data.teamId is string
        && isAdmin(resource.data.teamId);
    }
  }
}

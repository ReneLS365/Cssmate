rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null && request.auth.uid is string;
    }

    function authEmailLower() {
      return isSignedIn() && request.auth.token.email is string ? request.auth.token.email.lower() : '';
    }

    function isMember(teamId) {
      if (!isSignedIn()) return false;
      let member = get(/databases/$(database)/documents/teams/$(teamId)/members/$(request.auth.uid));
      return member.exists() && member.data.active != false;
    }

    function isOwner(teamId) {
      if (!isSignedIn()) return false;
      let member = get(/databases/$(database)/documents/teams/$(teamId)/members/$(request.auth.uid));
      return member.exists() && member.data.active != false && member.data.role == 'owner';
    }

    function isAdmin(teamId) {
      if (!isSignedIn()) return false;
      let member = get(/databases/$(database)/documents/teams/$(teamId)/members/$(request.auth.uid));
      return member.exists() && member.data.active != false && (member.data.role == 'admin' || member.data.role == 'owner');
    }

    function canManage(teamId) {
      return isAdmin(teamId) || isOwner(teamId);
    }

    function isBootstrapAdmin(teamId) {
      return isSignedIn()
        && authEmailLower() == 'mr.lion1995@gmail.com'
        && teamId == 'sscaff-team-hulmose';
    }

    function teamIdStable(teamId) {
      return !('teamId' in request.resource.data) || request.resource.data.teamId == teamId;
    }

    function inviteDoc(teamId) {
      return get(/databases/$(database)/documents/teamInvites/$(teamId + '__' + authEmailLower()));
    }

    function hasMatchingInvite(teamId) {
      let invite = inviteDoc(teamId);
      return invite.exists()
        && invite.data.emailLower == authEmailLower()
        && invite.data.active != false
        && !(invite.data.usedAt is timestamp);
    }

    function inviteRole(teamId) {
      let invite = inviteDoc(teamId);
      return invite.exists() ? invite.data.role : 'member';
    }

    function hasAuditActor() {
      return request.resource != null
        && request.resource.data.actor is map
        && request.resource.data.actor.uid is string
        && request.resource.data.actor.email is string
        && request.resource.data.actor.name is string;
    }

    function inviteConsumptionAllowed(invite) {
      return isSignedIn()
        && invite.data.emailLower == authEmailLower()
        && invite.data.teamId is string
        && request.resource.data.teamId == invite.data.teamId
        && request.resource.data.emailLower == invite.data.emailLower
        && request.resource.data.role == invite.data.role
        && request.resource.data.usedByUid == request.auth.uid
        && request.resource.data.active == false
        && request.resource.data.teamId == invite.data.teamId;
    }

    match /teamInvites/{inviteId} {
      allow create: if isSignedIn()
        && request.resource.data.teamId is string
        && request.resource.data.emailLower is string
        && (canManage(request.resource.data.teamId) || isBootstrapAdmin(request.resource.data.teamId));

      allow read: if isSignedIn()
        && (
          (resource.data.teamId is string && (canManage(resource.data.teamId) || resource.data.emailLower == authEmailLower()))
        );

      allow update: if resource.data.teamId is string
        && request.resource.data.teamId == resource.data.teamId
        && request.resource.data.emailLower == resource.data.emailLower
        && (
          (canManage(resource.data.teamId))
          || (inviteConsumptionAllowed(resource) && request.resource.data.usedAt is timestamp)
        );

      allow delete: if resource.data.teamId is string && canManage(resource.data.teamId);
    }

    match /users/{uid} {
      allow read, write: if isSignedIn() && request.auth.uid == uid;
    }

    match /teams/{teamId} {
      allow create: if canManage(teamId) || isBootstrapAdmin(teamId);
      allow read: if isMember(teamId);
      allow update: if canManage(teamId) || isBootstrapAdmin(teamId);
      allow delete: if isOwner(teamId);

      match /members/{uid} {
        allow read: if isMember(teamId);
        allow list: if canManage(teamId);
        allow create: if (
          (canManage(teamId) && teamIdStable(teamId))
          || (isSignedIn() && uid == request.auth.uid && hasMatchingInvite(teamId) && request.resource.data.role == inviteRole(teamId) && teamIdStable(teamId))
          || (isBootstrapAdmin(teamId) && uid == request.auth.uid)
        );
        allow update: if (
          (canManage(teamId) && teamIdStable(teamId))
        );
        allow delete: if canManage(teamId);
      }

      match /cases/{caseId} {
        allow read, list: if isMember(teamId);
        allow create: if isMember(teamId);
        allow update: if isMember(teamId);
        allow delete: if isMember(teamId);
      }

      match /audit/{auditId} {
        allow read: if isMember(teamId);
        allow create: if isMember(teamId) && hasAuditActor() && request.resource.data.teamId == teamId && request.resource.data.timestamp is timestamp;
        allow update, delete: if false;
      }

      match /{document=**} {
        allow read: if isMember(teamId);
        allow write: if canManage(teamId);
      }
    }
  }
}

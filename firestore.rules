rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null && request.auth.uid is string;
    }

    function isWhitelistedAdmin() {
      return signedIn()
        && request.auth.token.email is string
        && request.auth.token.email in ['mr.lion1995@gmail.com', 'MR.LION1995@GMAIL.COM', 'rene@hulmose.dk', 'RENE@HULMOSE.DK'];
    }

    function memberDoc(teamId, uid) {
      return get(/databases/$(database)/documents/teams/$(teamId)/members/$(uid));
    }

    function memberData(teamId, uid) {
      let doc = memberDoc(teamId, uid);
      return doc.data != null ? doc.data : {};
    }

    function memberActive(teamId, uid) {
      return memberDoc(teamId, uid).data != null && memberData(teamId, uid).active != false;
    }

    function isMember(teamId) {
      return signedIn() && teamId is string && memberActive(teamId, request.auth.uid);
    }

    function isAdmin(teamId) {
      return isMember(teamId) && memberData(teamId, request.auth.uid).role == 'admin';
    }

    function requestedTeamId() {
      return request.resource != null && request.resource.data.teamId is string
        ? request.resource.data.teamId
        : (resource.data != null && resource.data.teamId is string ? resource.data.teamId : null);
    }

    function teamIdMatchesRequest(teamId) {
      return request.resource != null && request.resource.data.teamId == teamId;
    }

    function teamIdUnchanged(teamId) {
      return (resource.data == null || !('teamId' in resource.data) || resource.data.teamId == teamId)
        && (request.resource == null || !('teamId' in request.resource.data) || request.resource.data.teamId == teamId);
    }

    function isCaseCreator(teamId) {
      return resource.data != null && resource.data.teamId == teamId && resource.data.createdBy is string && request.auth.uid == resource.data.createdBy;
    }

    function roleStable() {
      return resource.data == null || !(request.resource.data.role is string && request.resource.data.role != resource.data.role);
    }

    function teamStable() {
      return resource.data == null || !(request.resource.data.teamId is string && resource.data.teamId is string && request.resource.data.teamId != resource.data.teamId);
    }

    function hasAuditActor() {
      return request.resource != null
        && request.resource.data.actor is map
        && request.resource.data.actor.uid is string
        && request.resource.data.actor.email is string
        && request.resource.data.actor.name is string;
    }

    match /users/{uid} {
      allow read: if signedIn() && (request.auth.uid == uid || (requestedTeamId() is string && isAdmin(requestedTeamId())));
      allow create, update: if signedIn() && (
        (request.auth.uid == uid && roleStable() && teamStable())
        || (requestedTeamId() is string && isAdmin(requestedTeamId()))
      );
      allow delete: if false;
    }

    match /teams/{teamId} {
      allow create: if isWhitelistedAdmin() && !exists(/databases/$(database)/documents/teams/$(teamId));
      allow read: if isMember(teamId);
      allow update, delete: if isAdmin(teamId);

      match /members/{userId} {
        allow read: if signedIn() && (request.auth.uid == userId || isAdmin(teamId));
        allow create: if signedIn() && (
          (isWhitelistedAdmin() && request.auth.uid == userId)
          || isAdmin(teamId)
        );
        allow update, delete: if isAdmin(teamId);
      }

      match /cases/{caseId} {
        allow read, list: if isMember(teamId);
        allow create: if isMember(teamId) && teamIdMatchesRequest(teamId);
        allow update: if isMember(teamId) && teamIdUnchanged(teamId) && (isAdmin(teamId) || isCaseCreator(teamId));
        allow delete: if isMember(teamId) && (isAdmin(teamId) || isCaseCreator(teamId));
      }

      match /audit/{auditId} {
        allow read: if isMember(teamId);
        allow create: if isMember(teamId) && hasAuditActor() && teamIdMatchesRequest(teamId) && request.resource.data.timestamp is timestamp;
        allow update, delete: if false;
      }

      match /backups/{backupId} {
        allow read, write: if isAdmin(teamId);
      }
    }
  }
}

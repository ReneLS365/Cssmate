rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null && request.auth.uid is string;
    }

    function authEmail() {
      return signedIn() && request.auth.token.email is string ? request.auth.token.email.lower() : '';
    }

    function memberDoc(teamId) {
      return get(/databases/$(database)/documents/teams/$(teamId)/members/$(request.auth.uid));
    }

    function isActiveMember(teamId) {
      return signedIn()
        && exists(/databases/$(database)/documents/teams/$(teamId)/members/$(request.auth.uid))
        && memberDoc(teamId).data.active != false;
    }

    function isAdmin(teamId) {
      return isActiveMember(teamId) && memberDoc(teamId).data.role == 'admin';
    }

    function hasAuditActor() {
      return request.resource != null
        && request.resource.data.actor is map
        && request.resource.data.actor.uid is string
        && request.resource.data.actor.email is string
        && request.resource.data.actor.name is string;
    }

    function hasActiveInvite(teamId) {
      return activeInvite(teamId) != null;
    }

    function isBootstrapAdmin(teamId) {
      return signedIn()
        && authEmail() == 'mr.lion1995@gmail.com'
        && teamId == 'sscaff-team-hulmose';
    }

    function teamIdStable(teamId) {
      return !('teamId' in request.resource.data) || request.resource.data.teamId == teamId;
    }

    function activeInvite(teamId) {
      if (!signedIn() || authEmail() == '') return null;
      let invite = get(/databases/$(database)/documents/teams/$(teamId)/invites/$(authEmail()));
      return invite.exists() && invite.data.active == true ? invite : null;
    }

    function inviteRole(teamId) {
      let invite = activeInvite(teamId);
      return invite != null && invite.data.role == 'admin' ? 'admin' : 'member';
    }

    function isAuditPath(teamId) {
      let target = request.resource != null ? request.resource.__name__.path : resource.__name__.path;
      return target.matches('/databases/' + database + '/documents/teams/' + teamId + '/audit(/.*)?');
    }

    match /teams/{teamId} {
      allow create: if isAdmin(teamId) || isBootstrapAdmin(teamId);
      allow read: if isActiveMember(teamId);
      allow update, delete: if isAdmin(teamId);

      match /members/{uid} {
        allow read: if signedIn() && uid == request.auth.uid;
        allow list: if isAdmin(teamId);
        allow create: if (
          isAdmin(teamId)
          || (signedIn() && uid == request.auth.uid && hasActiveInvite(teamId) && request.resource.data.role == inviteRole(teamId))
          || (isBootstrapAdmin(teamId) && uid == request.auth.uid)
        ) && teamIdStable(teamId);
        allow update: if (
          isAdmin(teamId)
          || (signedIn() && uid == request.auth.uid && hasActiveInvite(teamId) && teamIdStable(teamId) && request.resource.data.role == resource.data.role && request.resource.data.active == resource.data.active)
        );
        allow delete: if isAdmin(teamId);
      }

      match /invites/{emailLower} {
        allow read: if isAdmin(teamId) || (signedIn() && emailLower.lower() == authEmail());
        allow list: if isAdmin(teamId);
        allow create, update, delete: if isAdmin(teamId) || (isBootstrapAdmin(teamId) && emailLower.lower() == authEmail());
      }

      match /cases/{caseId} {
        allow read, list: if isActiveMember(teamId);
        allow create: if isActiveMember(teamId);
        allow update: if isActiveMember(teamId);
        allow delete: if isActiveMember(teamId);
      }

      match /audit/{auditId} {
        allow read: if isActiveMember(teamId);
        allow create: if isActiveMember(teamId) && hasAuditActor() && request.resource.data.teamId == teamId && request.resource.data.timestamp is timestamp;
        allow update, delete: if false;
      }

      match /{document=**} {
        allow read: if isActiveMember(teamId);
        allow write: if isAdmin(teamId) && !isAuditPath(teamId);
      }
    }
  }
}

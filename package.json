{
  "name": "sscaff-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "bump-sw-version": "node scripts/bump-sw-version.js",
    "update-prices": "node scripts/update-price-lists.js",
    "build": "npm run bump-sw-version",
    "lh:mobile": "lighthouse ${LHCI_URL:-https://cssmate.netlify.app} --form-factor=mobile --screenEmulation.mobile=true --only-categories=performance,accessibility,best-practices,seo --chrome-flags=\"--headless --no-sandbox --disable-dev-shm-usage --ignore-certificate-errors\" --output=json --output-path=./docs/lighthouse/latest-mobile.json",
    "test:html": "html-validate \"app/**/*.html\"",
    "test:links": "linkinator app --silent --recurse --skip \"mailto:*\" --skip \"http://*\" --skip \"https://*\"",
    "test:lh:mobile": "lighthouse \"$LHCI_URL\" --form-factor=mobile --screenEmulation.mobile=true --only-categories=performance,accessibility,best-practices,seo,pwa --chrome-flags=\"--headless --no-sandbox --disable-dev-shm-usage --ignore-certificate-errors\" --output=json --output-path=./docs/lighthouse/latest-mobile.json",
    "test:lh:enforce": "node tools/lh-enforce.js",
    "test:super": "npm run build && npm run test:html && npm run test:links && npm run test:lh:mobile && npm run test:lh:enforce"
  },
  "devDependencies": {
    "html-validate": "^10.4.0",
    "lighthouse": "^12.8.2",
    "linkinator": "^7.5.0"
  }
}

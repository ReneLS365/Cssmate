{
  "name": "sscaff-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "bump:sw": "node scripts/bump-sw-version.js",
    "bump-sw-version": "node scripts/bump-sw-version.js",
    "update-prices": "node scripts/update-price-lists.js",
    "build": "npm run bump:sw && npm run bump-sw-version",
    "lh:mobile": "lighthouse ${LHCI_URL:-https://sscaff.netlify.app} --form-factor=mobile --screenEmulation.mobile=true --only-categories=performance,accessibility,best-practices,seo --throttling-method=provided --throttling.rttMs=0 --throttling.requestLatencyMs=0 --throttling.downloadThroughputKbps=0 --throttling.uploadThroughputKbps=0 --throttling.cpuSlowdownMultiplier=1 --chrome-flags=\"--headless=new --no-sandbox --disable-gpu --disable-dev-shm-usage --ignore-certificate-errors\" --output=json --output-path=./docs/lighthouse/latest-mobile.json",
    "test:html": "html-validate \"index.html\"",
    "test:links": "linkinator . --silent --recurse --skip \"mailto:*\" --skip \"http://*\" --skip \"https://*\"",
    "test:lh:mobile": "lighthouse \"$LHCI_URL\" --form-factor=mobile --screenEmulation.mobile=true --only-categories=performance,accessibility,best-practices,seo --throttling-method=provided --throttling.rttMs=0 --throttling.requestLatencyMs=0 --throttling.downloadThroughputKbps=0 --throttling.uploadThroughputKbps=0 --throttling.cpuSlowdownMultiplier=1 --chrome-flags=\"--headless=new --no-sandbox --disable-gpu --disable-dev-shm-usage --ignore-certificate-errors\" --output=json --output-path=./docs/lighthouse/latest-mobile.json",
    "test:lh:enforce": "node tools/lh-enforce.js",
    "test:super": "npm run build && npm run test:html && npm run test:links && npm run test:lh:mobile && npm run test:lh:enforce",
    "release:guard": "npm run test:super && node scripts/check-lighthouse-perfect.mjs"
  },
  "dependencies": {
    "chromium": "^3.0.3"
  },
  "devDependencies": {
    "html-validate": "^10.4.0",
    "http-server": "^14.1.1",
    "lighthouse": "^12.8.2",
    "linkinator": "^7.5.0"
  }
}
